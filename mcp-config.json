{
  "mcpServers": {
    "word-document-server": {
      "command": "uvx",
      "args": [
        "--from",
        "word-mcp-server",
        "word_mcp_server"
      ],
      "env": {
        "MCP_TRANSPORT": "streamable-http",
        "MCP_HOST": "127.0.0.1",
        "MCP_PORT": "8000",
        "MCP_PATH": "/mcp"
      }
    }
  }
}